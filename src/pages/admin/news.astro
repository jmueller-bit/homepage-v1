export const prerender = false;
---
<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>News verwalten | Astrid Lindgren Zentrum</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: system-ui, -apple-system, sans-serif;
      background: #f5f5f0;
      min-height: 100vh;
    }
    
    .header {
      background: white;
      border-bottom: 1px solid #e5e5e5;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 1rem;
    }
    
    .header h1 {
      font-size: 1.25rem;
      color: #2d2d2d;
    }
    
    .header-actions {
      display: flex;
      gap: 0.5rem;
      align-items: center;
    }
    
    .btn {
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      text-decoration: none;
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      border: none;
    }
    
    .btn-outline {
      color: #666;
      border: 1px solid #e5e5e5;
      background: white;
    }
    
    .btn-outline:hover {
      background: #f5f5f0;
    }
    
    .btn-primary {
      background: #8b9a46;
      color: white;
    }
    
    .btn-primary:hover {
      background: #7a853d;
    }
    
    .container {
      max-width: 900px;
      margin: 0 auto;
      padding: 2rem;
    }
    
    .news-list {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    
    .news-item {
      background: white;
      border-radius: 0.75rem;
      padding: 1.25rem;
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 1rem;
    }
    
    .news-content h3 {
      font-size: 1rem;
      margin-bottom: 0.25rem;
      color: #2d2d2d;
    }
    
    .news-meta {
      font-size: 0.75rem;
      color: #666;
    }
    
    .news-actions {
      display: flex;
      gap: 0.5rem;
    }
    
    .btn-sm {
      padding: 0.375rem 0.75rem;
      font-size: 0.75rem;
    }
    
    .btn-danger {
      background: #dc2626;
      color: white;
    }
    
    .btn-danger:hover {
      background: #b91c1c;
    }
    
    .empty-state {
      text-align: center;
      padding: 3rem;
      color: #666;
    }
    
    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      align-items: center;
      justify-content: center;
      padding: 1rem;
      z-index: 100;
    }
    
    .modal.active {
      display: flex;
    }
    
    .modal-content {
      background: white;
      border-radius: 1rem;
      width: 100%;
      max-width: 600px;
      max-height: 90vh;
      overflow-y: auto;
    }
    
    .modal-header {
      padding: 1.5rem;
      border-bottom: 1px solid #e5e5e5;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .modal-header h2 {
      font-size: 1.125rem;
    }
    
    .modal-close {
      background: none;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      color: #666;
    }
    
    .modal-body {
      padding: 1.5rem;
    }
    
    .form-group {
      margin-bottom: 1rem;
    }
    
    label {
      display: block;
      margin-bottom: 0.375rem;
      font-size: 0.875rem;
      font-weight: 500;
      color: #2d2d2d;
    }
    
    input, textarea, select {
      width: 100%;
      padding: 0.625rem 0.875rem;
      border: 2px solid #e5e5e5;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      font-family: inherit;
    }
    
    input:focus, textarea:focus, select:focus {
      outline: none;
      border-color: #8b9a46;
    }
    
    textarea {
      resize: vertical;
      min-height: 120px;
    }
    
    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }
    
    .help-text {
      font-size: 0.75rem;
      color: #666;
      margin-top: 0.25rem;
    }
    
    .modal-footer {
      padding: 1rem 1.5rem;
      border-top: 1px solid #e5e5e5;
      display: flex;
      justify-content: flex-end;
      gap: 0.5rem;
    }
    
    .loading {
      text-align: center;
      padding: 3rem;
      color: #666;
    }
    
    .error {
      background: #fee2e2;
      border: 1px solid #fecaca;
      color: #dc2626;
      padding: 0.75rem;
      border-radius: 0.5rem;
      margin-bottom: 1rem;
      font-size: 0.875rem;
    }
    
    .success {
      background: #dcfce7;
      border: 1px solid #86efac;
      color: #166534;
      padding: 0.75rem;
      border-radius: 0.5rem;
      margin-bottom: 1rem;
      font-size: 0.875rem;
    }
  </style>
</head>
<body>
  <header class="header">
    <h1>News verwalten</h1>
    <div class="header-actions">
      <a href="/admin/dashboard" class="btn btn-outline">← Dashboard</a>
      <button class="btn btn-primary" id="newBtn">+ Neu</button>
    </div>
  </header>
  
  <div class="container">
    <div id="message"></div>
    <div id="newsList" class="news-list">
      <div class="loading">Lade News...</div>
    </div>
  </div>
  
  <!-- Modal -->
  <div class="modal" id="newsModal">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Neue News erstellen</h2>
        <button class="modal-close" id="closeModal">&times;</button>
      </div>
      <form id="newsForm">
        <div class="modal-body">
          <div class="form-group">
            <label for="title">Titel *</label>
            <input type="text" id="title" name="title" required placeholder="z.B. Sommerfest 2025">
          </div>
          
          <div class="form-row">
            <div class="form-group">
              <label for="slug">URL-Slug *</label>
              <input type="text" id="slug" name="slug" required placeholder="sommerfest-2025">
              <div class="help-text">Wird automatisch aus dem Titel generiert</div>
            </div>
            
            <div class="form-group">
              <label for="category">Kategorie</label>
              <select id="category" name="category">
                <option value="">-- Auswählen --</option>
                <option value="Aktuelles">Aktuelles</option>
                <option value="Veranstaltung">Veranstaltung</option>
                <option value="Presse">Presse</option>
              </select>
            </div>
          </div>
          
          <div class="form-group">
            <label for="excerpt">Kurzbeschreibung *</label>
            <textarea id="excerpt" name="excerpt" required rows="3" placeholder="Kurze Zusammenfassung für die Übersicht..."></textarea>
            <div class="help-text">Max. 200 Zeichen empfohlen</div>
          </div>
          
          <div class="form-group">
            <label for="content">Inhalt *</label>
            <textarea id="content" name="content" required rows="8" placeholder="Vollständiger Artikel..."></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline" id="cancelBtn">Abbrechen</button>
          <button type="submit" class="btn btn-primary" id="saveBtn">Veröffentlichen</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Check auth
    if (!document.cookie.includes('admin_auth=true')) {
      window.location.href = '/admin';
    }
    
    let newsData = [];
    
    // Load news
    async function loadNews() {
      try {
        const response = await fetch('/api/admin/news');
        newsData = await response.json();
        renderNews();
      } catch (error) {
        document.getElementById('newsList').innerHTML = `
          <div class="empty-state">Fehler beim Laden: ${error.message}</div>
        `;
      }
    }
    
    function renderNews() {
      const container = document.getElementById('newsList');
      
      if (newsData.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <p>Noch keine News vorhanden</p>
            <p style="font-size: 0.875rem; margin-top: 0.5rem;">Klicke auf "+ Neu" um einen Artikel zu erstellen</p>
          </div>
        `;
        return;
      }
      
      container.innerHTML = newsData.map(news => `
        <div class="news-item" data-id="${news.id}">
          <div class="news-content">
            <h3>${escapeHtml(news.title)}</h3>
            <div class="news-meta">
              ${formatDate(news.date)} · ${news.category || 'Ohne Kategorie'} · Slug: ${news.slug}
            </div>
          </div>
          <div class="news-actions">
            <a href="/news/${news.slug}" target="_blank" class="btn btn-outline btn-sm">Ansehen</a>
            <button class="btn btn-danger btn-sm" onclick="deleteNews('${news.id}')">Löschen</button>
          </div>
        </div>
      `).join('');
    }
    
    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }
    
    function formatDate(dateStr) {
      if (!dateStr) return '-';
      const date = new Date(dateStr);
      return date.toLocaleDateString('de-AT');
    }
    
    // Modal handling
    const modal = document.getElementById('newsModal');
    const newBtn = document.getElementById('newBtn');
    const closeModal = document.getElementById('closeModal');
    const cancelBtn = document.getElementById('cancelBtn');
    
    newBtn.addEventListener('click', () => {
      modal.classList.add('active');
    });
    
    closeModal.addEventListener('click', () => {
      modal.classList.remove('active');
    });
    
    cancelBtn.addEventListener('click', () => {
      modal.classList.remove('active');
    });
    
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.classList.remove('active');
      }
    });
    
    // Auto-generate slug
    document.getElementById('title').addEventListener('input', (e) => {
      const slugInput = document.getElementById('slug');
      if (!slugInput.value) {
        slugInput.value = e.target.value
          .toLowerCase()
          .replace(/[^a-z0-9\s-]/g, '')
          .replace(/\s+/g, '-')
          .substring(0, 50);
      }
    });
    
    // Form submission
    document.getElementById('newsForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = {
        title: document.getElementById('title').value,
        slug: document.getElementById('slug').value,
        category: document.getElementById('category').value,
        excerpt: document.getElementById('excerpt').value,
        content: document.getElementById('content').value,
      };
      
      const saveBtn = document.getElementById('saveBtn');
      saveBtn.disabled = true;
      saveBtn.textContent = 'Wird gespeichert...';
      
      try {
        const response = await fetch('/api/admin/news', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(formData),
        });
        
        const result = await response.json();
        
        if (response.ok) {
          showMessage('News erfolgreich erstellt! ' + (result.deploy || ''), 'success');
          modal.classList.remove('active');
          document.getElementById('newsForm').reset();
          loadNews();
        } else {
          showMessage(result.error || 'Fehler beim Speichern', 'error');
        }
      } catch (error) {
        showMessage('Fehler: ' + error.message, 'error');
      } finally {
        saveBtn.disabled = false;
        saveBtn.textContent = 'Veröffentlichen';
      }
    });
    
    // Delete news
    window.deleteNews = async function(id) {
      if (!confirm('Möchtest du diese News wirklich löschen?')) return;
      
      try {
        const response = await fetch('/api/admin/news', {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id }),
        });
        
        const result = await response.json();
        
        if (response.ok) {
          showMessage('News gelöscht', 'success');
          loadNews();
        } else {
          showMessage(result.error || 'Fehler beim Löschen', 'error');
        }
      } catch (error) {
        showMessage('Fehler: ' + error.message, 'error');
      }
    };
    
    function showMessage(text, type) {
      const msgDiv = document.getElementById('message');
      msgDiv.innerHTML = `<div class="${type}">${text}</div>`;
      setTimeout(() => {
        msgDiv.innerHTML = '';
      }, 5000);
    }
    
    // Load on page load
    loadNews();
  </script>
</body>
</html>
