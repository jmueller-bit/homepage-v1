---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import Section from '../../components/Section.astro';
import Card from '../../components/Card.astro';
---

<BaseLayout title="Unsere Schule">
  <Hero
    title="Lernen mit <span class='hero-title-accent'>Herz & Verstand</span>"
    description="Unsere Schule ist ein Ort, an dem Kinder in ihrem eigenen Tempo wachsen können. Basierend auf reformpädagogischen Grundsätzen bieten wir eine Umgebung, die Selbstständigkeit und Gemeinschaft fördert."
    badge="Pädagogik im Fokus"
    imagePlaceholder="SCHULE"
  />

  <Section 
    title="Unser pädagogisches Konzept" 
    description="Wir vereinen bewährte Ansätze der Reformpädagogik zu einem ganzheitlichen Bildungskonzept."
    variant="alt"
  >
    <div class="grid grid-2">
      <Card 
        title="Montessori-Pädagogik" 
        description="'Hilf mir, es selbst zu tun' – dieser Leitsatz prägt unseren Alltag und die vorbereitete Umgebung."
        variant="default"
        imagePlaceholder="MONTESSORI"
      />
      <Card 
        title="Freinet-Ansatz" 
        description="Die Kommunikation, die freie Arbeit und das Lernen an der Realität stehen im Mittelpunkt."
        variant="default"
        imagePlaceholder="FREINET"
      />
    </div>
  </Section>

  <Section title="Bildungsstufen am ALZ">
    <div class="grid grid-3">
      <Card 
        title="Primaria I & II" 
        description="Die Basis für lebenslanges Lernen. In jahrgangsgemischten Gruppen (1.-6. Schulstufe) wird das Fundament für soziale und fachliche Kompetenzen gelegt."
        variant="campus"
        imagePlaceholder="PRIMARIA"
        href="/schule/schulstufen"
      />
      <Card 
        title="Sekundaria" 
        description="Vorbereitung auf das Leben. Wir begleiten Jugendliche (7.-9. Schulstufe) in ihrer Orientierungsphase und fördern eigenverantwortliches Handeln."
        variant="purple"
        imagePlaceholder="SEKUNDARIA"
        href="/schule/schulstufen"
      />
      <Card 
        title="Kolleg" 
        description="Professionelle Ausbildung für Elementarpädagogik mit Schwerpunkt Reformpädagogik. Die Expertenschmiede für zukünftige Pädagog:innen."
        variant="kolleg"
        imagePlaceholder="KOLLEG"
        href="/schule/schulstufen"
      />
    </div>
  </Section>
</BaseLayout>
