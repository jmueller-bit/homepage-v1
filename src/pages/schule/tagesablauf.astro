<style>
  /* Tagesablauf Section */
  .tagesablauf-section {
    max-width: 800px;
    margin: 0 auto;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-gray-900);
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .section-subtitle {
    text-align: center;
    color: var(--color-gray-600);
    margin-bottom: 3rem;
    font-size: 1.1rem;
  }

  .timetable {
    background: white;
    border-radius: 1rem;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
    overflow: hidden;
  }

  .time-row {
    display: flex;
    align-items: center;
    padding: 1.25rem 2rem;
    border-bottom: 1px solid var(--color-gray-100);
    transition: background-color 0.2s ease;
  }

  .time-row:last-child {
    border-bottom: none;
  }

  .time-row:hover {
    background-color: var(--color-gray-50);
  }

  .time {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-primary);
    min-width: 100px;
    font-family: monospace;
  }

  .activity {
    font-size: 1.1rem;
    color: var(--color-gray-800);
    font-weight: 500;
  }

  /* Angebot Section */
  .angebot-section {
    max-width: 1200px;
    margin: 0 auto;
  }

  .angebot-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-top: 3rem;
  }

  @media (max-width: 968px) {
    .angebot-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .angebot-grid {
      grid-template-columns: 1fr;
    }
  }

  .angebot-card {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    text-align: center;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .angebot-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .angebot-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .angebot-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-gray-900);
    margin-bottom: 0.75rem;
  }

  .angebot-card p {
    color: var(--color-gray-600);
    line-height: 1.6;
    font-size: 0.95rem;
  }

  /* CTA Section */
  .cta-section {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-section h2 {
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-gray-900);
    margin-bottom: 1rem;
  }

  .cta-text {
    font-size: 1.15rem;
    color: var(--color-gray-600);
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.875rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: var(--color-primary);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(var(--color-primary-rgb, 59, 130, 246), 0.3);
  }

  .btn-lg {
    padding: 1rem 2rem;
    font-size: 1.05rem;
  }
</style>