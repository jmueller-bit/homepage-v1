---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import { getAllGalleryImages } from '../../lib/contentful';

const images = await getAllGalleryImages(100);

// Group images by category (Alben)
const imagesByCategory = images.reduce((acc, img) => {
  const cat = img.category || 'Allgemein';
  if (!acc[cat]) acc[cat] = [];
  acc[cat].push(img);
  return acc;
}, {} as Record<string, typeof images>);

const categories = Object.keys(imagesByCategory);
const allImages = images; // Flat array for lightbox
---

<BaseLayout title="Galerie">
  <Hero
    title="Bilder aus dem <span class='hero-title-accent'>Schulleben</span>"
    description="Eindr√ºcke von unseren Projekten, Festen und Ausfl√ºgen."
    badge="Impressionen"
    imagePlaceholder="GALERIE"
  />

  <section class="gallery-section">
    <div class="container">
      <!-- Filter Buttons -->
      <div class="filter-container">
        <button class="filter-btn active" data-filter="all">
          <span class="filter-icon">üñºÔ∏è</span>
          Alle
          <span class="filter-count">({allImages.length})</span>
        </button>
        {categories.map((category) => (
          <button class="filter-btn" data-filter={category}>
            <span class="filter-icon">
              {category === 'unterricht' ? 'üìö' : 
               category === 'events' ? 'üéâ' : 
               category === 'sport' ? '‚öΩ' : 'üìÅ'}
            </span>
            {category.charAt(0).toUpperCase() + category.slice(1)}
            <span class="filter-count">({imagesByCategory[category].length})</span>
          </button>
        ))}
      </div>

      <!-- Album Grid (f√ºr Ordner/Alben-Struktur) -->
      <div class="albums-grid" id="albumsGrid">
        {categories.length === 0 ? (
          <div class="empty-state">
            <div class="empty-icon">üì∑</div>
            <h3>Noch keine Bilder</h3>
            <p>Bald gibt es hier Bilder zu sehen!</p>
          </div>
        ) : (
          categories.map((category) => {
            const categoryImages = imagesByCategory[category];
            const coverImage = categoryImages[0];
            return (
              <div class="album-card" data-category={category} data-action="open-album">
                <div class="album-cover">
                  <div class="skeleton-loader" data-skeleton></div>
                  <img 
                    src={coverImage.src} 
                    alt={category}
                    loading="lazy"
                    onload="this.previousElementSibling.style.display='none'"
                  />
                  <div class="album-overlay">
                    <div class="album-icon">üìÇ</div>
                    <span class="album-open">√ñffnen</span>
                  </div>
                  <div class="album-count">{categoryImages.length} Bilder</div>
                </div>
                <div class="album-info">
                  <h3 class="album-title">{category.charAt(0).toUpperCase() + category.slice(1)}</h3>
                  <p class="album-description">{categoryImages.length} Bilder in diesem Album</p>
                </div>
              </div>
            );
          })
        )}
      </div>

      <!-- Masonry Image Grid -->
      <div class="masonry-grid" id="masonryGrid" style="display: none;">
        {allImages.map((image, index) => (
          <div 
            class="masonry-item" 
            data-category={image.category || 'Allgemein'}
            data-index={index}
            data-action="open-lightbox"
          >
            <div class="skeleton-loader skeleton-masonry" data-skeleton></div>
            <img 
              src={image.src} 
              alt={image.alt}
              loading="lazy"
              class="masonry-img"
              onload="this.previousElementSibling.style.display='none'; this.classList.add('loaded')"
            />
            <div class="masonry-overlay">
              <div class="zoom-icon">üîç</div>
              <span class="image-title">{image.title}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Lightbox -->
  <div id="lightbox" class="lightbox">
    <div class="lightbox-backdrop" onclick="closeLightbox()"></div>
    
    <!-- Close Button -->
    <button class="lightbox-close" onclick="closeLightbox()">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 6L6 18M6 6l12 12"/>
      </svg>
    </button>

    <!-- Zoom Controls -->
    <div class="zoom-controls">
      <button class="zoom-btn" onclick="zoomIn()" title="Vergr√∂√üern">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"/>
          <path d="M21 21l-4.35-4.35"/>
          <path d="M11 8v6M8 11h6"/>
        </svg>
      </button>
      <button class="zoom-btn" onclick="zoomOut()" title="Verkleinern">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"/>
          <path d="M21 21l-4.35-4.35"/>
          <path d="M8 11h6"/>
        </svg>
      </button>
      <button class="zoom-btn" onclick="resetZoom()" title="Zur√ºcksetzen">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/>
          <path d="M3 3v5h5"/>
        </svg>
      </button>
    </div>

    <!-- Slideshow Controls -->
    <button class="slideshow-btn prev" onclick="prevImage()">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M15 18l-6-6 6-6"/>
      </svg>
    </button>
    
    <button class="slideshow-btn next" onclick="nextImage()">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M9 18l6-6-6-6"/>
      </svg>
    </button>

    <!-- Image Container with Zoom -->
    <div class="lightbox-content">
      <div class="lightbox-image-container" id="lightboxImageContainer">
        <img id="lightboxImage" src="" alt="" class="lightbox-img"/>
      </div>
      
      <!-- Image Info -->
      <div class="lightbox-info">
        <h3 id="lightboxTitle"></h3>
        <p id="lightboxCategory"></p>
        <span id="lightboxCounter" class="image-counter"></span>
      </div>
    </div>

    <!-- Thumbnail Strip -->
    <div class="thumbnail-strip" id="thumbnailStrip">
      {allImages.map((image, index) => (
        <div 
          class="thumbnail" 
          data-index={index}
          data-action="go-to-image"
        >
          <img src={image.src} alt={image.alt} loading="lazy" />
        </div>
      ))}
    </div>
  </div>

  <!-- Album View Modal -->
  <div id="albumModal" class="album-modal">
    <div class="album-modal-backdrop" onclick="closeAlbum()"></div>
    <div class="album-modal-content">
      <button class="album-modal-close" onclick="closeAlbum()">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 6L6 18M6 6l12 12"/>
        </svg>
      </button>
      <h2 id="albumModalTitle" class="album-modal-title"></h2>
      <div id="albumModalGrid" class="album-modal-grid"></div>
    </div>
  </div>
</BaseLayout>

<script is:inline define:vars={{ allImages: JSON.stringify(allImages), imagesByCategory: JSON.stringify(imagesByCategory) }}>
  // Global variables
  let currentImageIndex = 0;
  let currentZoom = 1;
  let isDragging = false;
  let startX, startY, translateX = 0, translateY = 0;
  let filteredImages = [...allImages];
  let currentFilter = 'all';

  // Event Delegation - Handle clicks on album cards, masonry items, and thumbnails
  document.addEventListener('click', (e) => {
    // Check for album card click
    const albumCard = e.target.closest('[data-action="open-album"]');
    if (albumCard) {
      e.preventDefault();
      e.stopPropagation();
      const category = albumCard.dataset.category;
      if (category) {
        openAlbum(category);
      }
      return;
    }
    
    // Check for masonry item click
    const masonryItem = e.target.closest('[data-action="open-lightbox"]');
    if (masonryItem) {
      e.preventDefault();
      e.stopPropagation();
      const index = parseInt(masonryItem.dataset.index);
      if (!isNaN(index)) {
        openLightbox(index);
      }
      return;
    }

    // Check for thumbnail click
    const thumbnail = e.target.closest('[data-action="go-to-image"]');
    if (thumbnail) {
      e.preventDefault();
      e.stopPropagation();
      const index = parseInt(thumbnail.dataset.index);
      if (!isNaN(index)) {
        goToImage(index);
      }
      return;
    }
  });

  // Filter functionality
  document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = btn.dataset.filter;
      currentFilter = filter;
      
      // Update active button
      document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      
      // Filter images
      if (filter === 'all') {
        filteredImages = [...allImages];
        document.getElementById('albumsGrid').style.display = 'grid';
        document.getElementById('masonryGrid').style.display = 'none';
      } else {
        filteredImages = allImages.filter(img => (img.category || 'Allgemein') === filter);
        document.getElementById('albumsGrid').style.display = 'none';
        document.getElementById('masonryGrid').style.display = 'block';
        
        // Update masonry items visibility
        document.querySelectorAll('.masonry-item').forEach(item => {
          if (item.dataset.category === filter) {
            item.style.display = 'block';
          } else {
            item.style.display = 'none';
          }
        });
        
        // Reinitialize masonry layout
        setTimeout(initMasonry, 100);
      }
    });
  });

  // Album functionality
  function openAlbum(category) {
    const modal = document.getElementById('albumModal');
    const title = document.getElementById('albumModalTitle');
    const grid = document.getElementById('albumModalGrid');
    
    title.textContent = category.charAt(0).toUpperCase() + category.slice(1);
    grid.innerHTML = '';
    
    const images = imagesByCategory[category] || [];
    images.forEach((image, index) => {
      const item = document.createElement('div');
      item.className = 'album-modal-item';
      item.onclick = () => {
        closeAlbum();
        const globalIndex = allImages.findIndex(img => img.id === image.id);
        openLightbox(globalIndex);
      };
      
      item.innerHTML = `
        <div class="skeleton-loader" data-skeleton></div>
        <img src="${image.src}" alt="${image.alt}" loading="lazy" 
             onload="this.previousElementSibling.style.display='none'">
        <div class="album-item-overlay">
          <span>${image.title}</span>
        </div>
      `;
      
      grid.appendChild(item);
    });
    
    modal.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function closeAlbum() {
    const modal = document.getElementById('albumModal');
    modal.classList.remove('active');
    document.body.style.overflow = '';
  }

  // Lightbox functionality
  function openLightbox(index) {
    currentImageIndex = index;
    const lightbox = document.getElementById('lightbox');
    const image = filteredImages[index] || allImages[index];
    
    if (!image) return;
    
    updateLightboxImage(image);
    lightbox.classList.add('active');
    document.body.style.overflow = 'hidden';
    
    // Update thumbnails
    document.querySelectorAll('.thumbnail').forEach((thumb, i) => {
      thumb.classList.toggle('active', i === currentImageIndex);
    });
    
    // Keyboard navigation
    document.addEventListener('keydown', handleKeydown);
  }

  function closeLightbox() {
    const lightbox = document.getElementById('lightbox');
    lightbox.classList.remove('active');
    document.body.style.overflow = '';
    resetZoom();
    document.removeEventListener('keydown', handleKeydown);
  }

  function updateLightboxImage(image) {
    const img = document.getElementById('lightboxImage');
    const title = document.getElementById('lightboxTitle');
    const category = document.getElementById('lightboxCategory');
    const counter = document.getElementById('lightboxCounter');
    
    img.src = image.src;
    img.alt = image.alt;
    title.textContent = image.title;
    category.textContent = image.category || 'Allgemein';
    counter.textContent = `${currentImageIndex + 1} / ${allImages.length}`;
    
    resetZoom();
  }

  function nextImage() {
    currentImageIndex = (currentImageIndex + 1) % allImages.length;
    updateLightboxImage(allImages[currentImageIndex]);
    updateThumbnails();
  }

  function prevImage() {
    currentImageIndex = (currentImageIndex - 1 + allImages.length) % allImages.length;
    updateLightboxImage(allImages[currentImageIndex]);
    updateThumbnails();
  }

  function goToImage(index) {
    currentImageIndex = index;
    updateLightboxImage(allImages[currentImageIndex]);
    updateThumbnails();
  }

  function updateThumbnails() {
    document.querySelectorAll('.thumbnail').forEach((thumb, i) => {
      thumb.classList.toggle('active', i === currentImageIndex);
      if (i === currentImageIndex) {
        thumb.scrollIntoView({ behavior: 'smooth', inline: 'center', block: 'nearest' });
      }
    });
  }

  // Zoom functionality
  function zoomIn() {
    currentZoom = Math.min(currentZoom + 0.5, 4);
    applyZoom();
  }

  function zoomOut() {
    currentZoom = Math.max(currentZoom - 0.5, 0.5);
    if (currentZoom === 1) {
      translateX = 0;
      translateY = 0;
    }
    applyZoom();
  }

  function resetZoom() {
    currentZoom = 1;
    translateX = 0;
    translateY = 0;
    applyZoom();
  }

  function applyZoom() {
    const container = document.getElementById('lightboxImageContainer');
    const img = document.getElementById('lightboxImage');
    
    img.style.transform = `translate(${translateX}px, ${translateY}px) scale(${currentZoom})`;
    container.style.cursor = currentZoom > 1 ? 'grab' : 'default';
  }

  // Drag functionality for zoomed images
  const imageContainer = document.getElementById('lightboxImageContainer');
  
  imageContainer?.addEventListener('mousedown', (e) => {
    if (currentZoom > 1) {
      isDragging = true;
      startX = e.clientX - translateX;
      startY = e.clientY - translateY;
      imageContainer.style.cursor = 'grabbing';
    }
  });

  document.addEventListener('mousemove', (e) => {
    if (isDragging) {
      translateX = e.clientX - startX;
      translateY = e.clientY - startY;
      applyZoom();
    }
  });

  document.addEventListener('mouseup', () => {
    isDragging = false;
    if (imageContainer) {
      imageContainer.style.cursor = currentZoom > 1 ? 'grab' : 'default';
    }
  });

  // Mouse wheel zoom
  imageContainer?.addEventListener('wheel', (e) => {
    e.preventDefault();
    if (e.deltaY < 0) {
      zoomIn();
    } else {
      zoomOut();
    }
  });

  // Keyboard navigation
  function handleKeydown(e) {
    switch(e.key) {
      case 'Escape':
        closeLightbox();
        break;
      case 'ArrowRight':
        nextImage();
        break;
      case 'ArrowLeft':
        prevImage();
        break;
      case '+':
      case '=':
        zoomIn();
        break;
      case '-':
        zoomOut();
        break;
      case '0':
        resetZoom();
        break;
    }
  }

  // Masonry Layout
  function initMasonry() {
    const grid = document.getElementById('masonryGrid');
    if (!grid) return;
    
    const items = grid.querySelectorAll('.masonry-item:not([style*="display: none"])');
    const columnWidth = 300;
    const gap = 16;
    const containerWidth = grid.clientWidth;
    const columns = Math.floor(containerWidth / (columnWidth + gap));
    
    const columnHeights = new Array(columns).fill(0);
    
    items.forEach((item) => {
      const img = item.querySelector('img');
      if (!img.complete) {
        img.onload = () => positionMasonryItem(item, columnHeights, columnWidth, gap);
      } else {
        positionMasonryItem(item, columnHeights, columnWidth, gap);
      }
    });
    
    const maxHeight = Math.max(...columnHeights);
    grid.style.height = `${maxHeight}px`;
  }

  function positionMasonryItem(item, columnHeights, columnWidth, gap) {
    const img = item.querySelector('img');
    const aspectRatio = img.naturalWidth / img.naturalHeight || 1;
    const itemHeight = columnWidth / aspectRatio;
    
    const minHeight = Math.min(...columnHeights);
    const columnIndex = columnHeights.indexOf(minHeight);
    
    item.style.position = 'absolute';
    item.style.left = `${columnIndex * (columnWidth + gap)}px`;
    item.style.top = `${minHeight}px`;
    item.style.width = `${columnWidth}px`;
    
    columnHeights[columnIndex] += itemHeight + gap;
  }

  // Initialize masonry on load and resize
  window.addEventListener('load', initMasonry);
  window.addEventListener('resize', () => {
    if (document.getElementById('masonryGrid').style.display !== 'none') {
      initMasonry();
    }
  });

  // Touch/Swipe support for mobile
  let touchStartX = 0;
  let touchEndX = 0;

  document.getElementById('lightbox')?.addEventListener('touchstart', (e) => {
    touchStartX = e.changedTouches[0].screenX;
  }, false);

  document.getElementById('lightbox')?.addEventListener('touchend', (e) => {
    touchEndX = e.changedTouches[0].screenX;
    handleSwipe();
  }, false);

  function handleSwipe() {
    if (touchEndX < touchStartX - 50) nextImage();
    if (touchEndX > touchStartX + 50) prevImage();
  }

  // Prevent context menu on images
  document.querySelectorAll('.masonry-img, .lightbox-img').forEach(img => {
    img.addEventListener('contextmenu', e => e.preventDefault());
  });
</script>

<style>
