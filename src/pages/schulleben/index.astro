---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Section from '../../components/Section.astro';
import Card from '../../components/Card.astro';
import { getNews } from '../../lib/contentful';

const newsItems = await getNews();
---

<BaseLayout title="Schulleben">
  <Section 
    title="Aktuelles & News" 
    description="Einblicke in unseren Schulalltag, Berichte von Ausflügen und wichtige Ankündigungen."
  >
    <div class="grid grid-3">
      {newsItems.map((item) => (
        <Card 
          title={item.title}
          description={item.excerpt}
          href={`/schulleben/aktuelles`}
          ctaLabel="Beitrag lesen"
          imagePlaceholder={item.category || 'News'}
        />
      ))}
    </div>
  </Section>
</BaseLayout>
